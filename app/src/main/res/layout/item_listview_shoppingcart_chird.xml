<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <CheckBox
                android:id="@+id/checkBox_checkSub_shoppingCartItem_chird"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:button="@null"
                android:drawableLeft="@drawable/selector_checkbox_status"
                android:padding="5dp"
                android:focusable="false"
                android:checked="false" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp" >

                    <ImageView
                        android:id="@+id/iv_productIcon_shoppingCartItem_chird"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        android:src="@drawable/main_button" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="3"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/tv_productName_shoppingCartItem_chird"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="洗剪吹55555555555"
                            android:textColor="@color/text_color_black_title"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_exchangeIntegral_shoppingCartItem_chird"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="490积分"
                            android:textColor="@color/yellow"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:orientation="vertical" >

                        <com.huiche.view.ObliqueLineTextView
                            xmlns:app="http://schemas.android.com/apk/res/com.huiche"
                            android:id="@+id/tv_doorPrice_shoppingCartItem_chird"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:singleLine="true"
                            android:text="门店价:50元"
                            android:textColor="@color/text_color_black_light"
                            app:line_color="@color/text_color_red" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >
                            <ImageButton
                                android:id="@+id/imb_reduceProduct_shoppingCartItem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent"
                                android:focusable="false"
                                android:src="@drawable/reduce_green" />

                            <TextView
                                android:id="@+id/tv_addCount_shoppingCartItem_chird"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/center_green"
                                android:gravity="center"
                                android:paddingBottom="5dp"
                                android:paddingTop="5dp"
                                android:text="10"
                                android:textColor="@color/text_color_black_light2" />

                            <ImageButton
                                android:id="@+id/imb_increaseProduct_shoppingCartItem"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:background="@color/transparent"
                                android:src="@drawable/increase_green" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:id="@+id/view_divideLastSub"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divide_color" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/view_divideLast"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divide_color"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>