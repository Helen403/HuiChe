<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <View
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#D2D2D2" />
           <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#F5F5F5" />

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="50dp" >

               <TextView
                   android:id="@+id/textView1"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_marginLeft="20dp"
                   android:gravity="center_vertical"
                   android:text="金额(积分)" />

               <TextView
                   android:id="@+id/money_integral"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_alignParentTop="true"
                   android:layout_marginLeft="30dp"
                   android:layout_toRightOf="@+id/textView1"
                   android:gravity="center_vertical"
                   android:text="+5"
                   android:textColor="#20AFE7" />
           </RelativeLayout>
           <View
               android:layout_marginRight="20sp"
               android:layout_marginLeft="20sp"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#D2D2D2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="获得原因" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_why_integral"
                    android:text="积分"
                    android:textColor="#B2B2B2" />

                <TextView
                    android:id="@+id/tv_why"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView2"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical"
                    android:text="抽中了+5积分"
                    android:textColor="#B2B2B2" />

                <TextView
                    android:id="@+id/tv_why_integral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_why"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_vertical"
                    android:text="+4568"
                    android:textColor="#696969" />

                <TextView
                    android:id="@+id/tv_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_alignBaseline="@+id/tv_why"
                    android:layout_alignBottom="@+id/tv_why"
                    android:layout_toRightOf="@+id/tv_why"
                    android:gravity="center_vertical"
                    android:text="(13005558952)"
                    android:textColor="#696969" />

            </RelativeLayout>

           <View
               android:layout_marginRight="20sp"
               android:layout_marginLeft="20sp"
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#D2D2D2" />

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="50dp" >

               <TextView
                   android:id="@+id/tv_time"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_alignParentRight="true"
                   android:layout_alignParentTop="true"
                   android:layout_marginRight="20dp"
                   android:gravity="center_vertical"
                   android:text="14:00"
                   android:textColor="#B2B2B2" />

               <TextView
                   android:id="@+id/tv_date"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_alignParentTop="true"
                   android:layout_marginRight="10dp"
                   android:layout_toLeftOf="@+id/tv_time"
                   android:gravity="center_vertical"
                   android:text="2016-05-30"
                   android:textColor="#B2B2B2" />

           </RelativeLayout>
           <View
               
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:background="#D2D2D2" />
    

</LinearLayout>
