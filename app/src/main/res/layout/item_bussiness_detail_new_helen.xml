<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

      <!--  <RelativeLayout
            android:id="@+id/rl_gradientText"
            android:layout_width="120dp"

            android:layout_height="match_parent">-->

            <ImageView
                android:layout_marginTop="8dp"
                android:scaleType="fitXY"
                android:id="@+id/iv_exchangeIcon"
                android:layout_width="120dp"
                android:layout_height="match_parent"
               android:layout_centerVertical="true"
                />

          <!--  <com.huiche.view.GradientTextView
                android:visibility="gone"
                android:id="@+id/gtv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/preferential_volume_label"
                android:gravity="center"
                android:text="9.9折   "
                android:textColor="@color/white" />-->
       <!-- </RelativeLayout>-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <!-- 商品名称 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_productName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="洗剪吹"
                    android:singleLine="true"
                    android:textColor="@color/text_color_black_title"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_exchangeIntegral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right|bottom"
                    android:text="500积分"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/text_color_red"
                    android:textSize="16sp" />

            </LinearLayout>
            <!-- 积分 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_hasExchange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="已兑换630件"
                    android:textColor="@color/text_color_grey" />

                <com.huiche.view.ObliqueLineTextView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/tv_doorPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right|bottom"
                    android:text="门店价50元"
                    android:textColor="@color/text_color_grey"
                    app:line_color="@color/text_color_deep_red" />
            </RelativeLayout>
            <!-- 立即兑换 -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:singleLine="true"
                    android:id="@+id/tv_saveMoney"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:background="@drawable/bg_save_money"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="省一元"
                    android:textColor="@color/text_color_red"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_exchangeNow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:background="@drawable/bg_red_exchange"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="立即兑换"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>