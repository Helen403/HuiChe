<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    <View 
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="#EEEEEE"
        
        />
    <LinearLayout
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="40dp" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="订单号 :"
            android:textColor="#696969"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_orderID"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:text="185695326952"
            android:textColor="#696969"
            android:textSize="16sp" />
        <TextView 
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="已完成"
            android:layout_marginRight="20dp"
            android:textColor="@color/status_color"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:background="#D2D2D2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="商家店铺 "
                android:textColor="#B6B6B6"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="豪哥牌避孕套"
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>
        <View
            android:id="@+id/line_view"
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
                android:background="#D2D2D2" />

        <LinearLayout
            android:id="@+id/ll_shop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:visibility="gone" >

            <com.huiche.view.MyListView
                android:id="@+id/myListview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
            </com.huiche.view.MyListView>

          
        </LinearLayout>

        
    </LinearLayout>

   

    

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:background="#D2D2D2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="合计: "
                android:textColor="#B6B6B6"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_intenal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="165164"
                android:textColor="#FF3366"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:text="积分"
                android:textColor="#B6B6B6"
                android:textSize="16sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_pay_blue"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/buton_blue_shape"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="付款"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_confirm_red"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/red_border"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="确认收货"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="16sp"
               />

            <TextView
                android:id="@+id/tv_cancel_org"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/org_border"
                android:gravity="center"
                android:paddingBottom="8dp"
                android:paddingTop="8dp"
                android:text="退款"
                android:visibility="gone"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="60dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/prompt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="温馨提示:12小时内不可取消订单。"
                android:textColor="#EC8B00" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:visibility="gone"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:background="#D2D2D2" />
<LinearLayout
    android:id="@+id/ll_wuliu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
             android:gravity="center"
             android:visibility="gone"
            android:orientation="horizontal" >
            <TextView
               android:gravity="center"
                android:id="@+id/tv_pay_type"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
               
                android:text="查看物流"
                android:textColor="#666666"
                android:textSize="16sp" />
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/the_gray_arrow_right"
                android:layout_marginRight="15dp"
                />
        </LinearLayout>
       
    

</LinearLayout>