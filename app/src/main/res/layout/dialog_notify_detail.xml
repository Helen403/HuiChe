<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_delete_dialog"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:src="@drawable/the_delete_button" />

    <TextView
        android:id="@+id/tv_notifyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="店铺公告"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.66dp"
        android:layout_margin="10dp"
        android:background="@color/text_color_black_title" />

    <ListView
        android:scrollbars="none"
        android:dividerHeight="5dp"
        android:divider="@color/transparent"
        android:id="@+id/lv_notify_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
       />

</LinearLayout>