<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="5dp"
    android:layout_margin="10dp"
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_productIcon_recommend"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY"
            />

        <com.huiche.view.GradientTextView
            android:id="@+id/gradientTextView_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/preferential_volume_label"
            android:gravity="center"
            android:text="9.9折   "
            android:textColor="@color/white" />
    </RelativeLayout>

    <TextView
        android:singleLine="true"
        android:id="@+id/tv_productName_recommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="洗剪吹"
        android:textColor="@color/text_color_black_title"
        android:textSize="18sp" />

    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="会员价:"
                    android:textColor="#747474"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_memberPrice_recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color_black"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_exchangeIntegral_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="500积分兑换"
                android:textColor="@color/yellow"
                android:textSize="16sp" />
        </LinearLayout>
        <!-- add添加 -->

        <ImageButton
            android:id="@+id/imb_add_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:padding="5dp"
            android:src="@drawable/add_button_green" />
    </RelativeLayout>


</LinearLayout>