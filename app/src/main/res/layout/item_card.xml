<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:background="@drawable/pink_youhuiquan"
        android:layout_marginRight="15dp"
        android:layout_height="110dp"
        android:id="@+id/ll_card">
        <TextView
            android:id="@+id/tv_fuhao"
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:text="¥"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="66dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="20"
            android:layout_marginLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_fuhao"
            android:layout_toEndOf="@+id/tv_fuhao"
            android:id="@+id/my_tv_money" />
        
        <ImageView
            android:layout_width="wrap_content"
            android:src="@drawable/xuxian"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@+id/my_tv_money"
            android:layout_toEndOf="@+id/my_tv_money"
            android:id="@+id/img_xx" />

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/img_xx"
            android:layout_toEndOf="@+id/img_xx"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp">
            <TextView
                android:id="@+id/card_type"
                android:layout_width="wrap_content"
                android:text="平台通用券"
                android:layout_marginRight="5dp"
                android:textSize="18sp"
                android:maxLength="7"
                android:layout_height="wrap_content" />
            <TextView

                android:layout_width="wrap_content"
                android:text="满100元可使用"
                android:maxLength="12"

                android:textColor="#AFAFAF"
                android:layout_height="wrap_content"
               android:layout_below="@id/card_type"
                android:layout_marginTop="10dp"
                android:id="@+id/my_card_detail" />

            <TextView
                android:layout_width="wrap_content"
                android:text="2016-3-16 至 2016-4-05"
                android:singleLine="true"
                android:textColor="#AFAFAF"
                android:layout_height="wrap_content"
                android:layout_below="@+id/my_card_detail"
                android:layout_marginTop="10dp"
                android:id="@+id/card_time" />

            <ImageView
                android:id="@+id/card_status"
                android:layout_width="wrap_content"
                android:src="@drawable/shixiaotubiao"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/my_card_detail"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/my_card_selector"
            android:layout_width="23dp"
            android:visibility="gone"
            android:layout_height="23dp" />
        
        

    </RelativeLayout>

</LinearLayout>
