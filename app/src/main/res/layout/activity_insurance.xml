<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="保险类型"
            android:textColor="#4E4E4E"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_1"
            android:padding="10dp"
            android:clickable="true"
            android:src="@drawable/selector_insurance" />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_1"
            android:padding="10dp"
            android:text="线上购买"
            android:textColor="#4E4E4E"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_2"
            android:padding="10dp"
            android:src="@drawable/selector_insurance" />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_2"
            android:padding="10dp"
            android:text="线下购买"
            android:textColor="#4E4E4E"
            android:textSize="20sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="投保金额"
            android:textColor="#4E4E4E"
            android:textSize="20sp" />

        <View
            android:id="@+id/view_1"
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_4"
            android:background="#E92318" />

        <EditText

            android:id="@+id/edit_1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/view_1"
            android:layout_weight="0.6"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="请输入购买的保险金额"
            android:singleLine="true"
            android:textColorHint="#D2D2D2"
            android:inputType="number"
            android:textSize="20sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"

            android:text="保单号"
            android:textColor="#4E4E4E"
            android:textSize="20sp" />

        <View
            android:id="@+id/view_2"
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_5"
            android:background="#E92318" />

        <EditText
            android:inputType="number"
            android:id="@+id/edit_2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/view_2"
            android:layout_weight="0.6"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="请输入你的保单号"
            android:singleLine="true"
            android:textColorHint="#D2D2D2"
            android:textSize="20sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="保险公司"
            android:textColor="#4E4E4E"

            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_13"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/tv_6"
            android:layout_weight="0.6"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:hint="请选择保险公司"
            android:singleLine="true"
            android:textColorHint="#D2D2D2"
            android:textSize="20sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:text="姓名"
            android:textColor="#4E4E4E"
            android:textSize="20sp" />

        <View
            android:id="@+id/view_3"
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_7"
            android:background="#E92318" />

        <EditText
            android:id="@+id/edit_3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/view_3"
            android:layout_weight="0.6"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="请输入你的姓名"
            android:singleLine="true"
            android:textColorHint="#D2D2D2"
            android:textSize="20sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="电话号码"
            android:textColor="#4E4E4E"

            android:textSize="20sp" />

        <View
            android:id="@+id/view_4"
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_8"
            android:background="#E92318" />

        <EditText
            android:id="@+id/edit_4"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/view_4"
            android:layout_weight="0.6"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="请输入你的电话号码"
            android:inputType="number"
            android:singleLine="true"
            android:textColorHint="#D2D2D2"
            android:textSize="20sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="礼品卷"
            android:textColor="#4E4E4E"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_12"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/tv_9"
            android:layout_weight="0.6"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center_vertical"
            android:hint="你已选择一张礼品卷"
            android:singleLine="true"
            android:textColor="#D2D2D2"
            android:textSize="20sp" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff">

        <TextView
            android:id="@+id/tv_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:text="推荐人"
            android:textColor="#4E4E4E"
            android:textSize="20sp" />

        <View
            android:id="@+id/view_5"
            android:layout_width="1dp"
            android:layout_height="22dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/tv_10"
            android:background="#E92318" />

        <EditText
            android:id="@+id/edit_5"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/view_5"
            android:layout_weight="0.6"
            android:background="@null"
            android:focusable="true"
            android:inputType="number"
            android:focusableInTouchMode="true"
            android:hint="请输入推荐人的电话号码"
            android:singleLine="true"
            android:textColorHint="#D2D2D2"
            android:textSize="20sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <TextView
        android:id="@+id/tv_11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="26dp"
        android:background="@drawable/bg_oil_sure"
        android:gravity="center"
        android:padding="10dp"
        android:text="提交"
        android:textColor="#fff"
        android:textSize="18sp" />

</LinearLayout>