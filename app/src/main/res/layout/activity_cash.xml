<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.baidu.mapapi.map.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true" />

        <com.huiche.view.WhewView
            android:id="@+id/whewView_U_U"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.huiche.lib.lib.custemview.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/head_merchants"
            app:border_color="@color/status_color"
            app:border_width="1dp">

        </com.huiche.lib.lib.custemview.CircleImageView>

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:src="@drawable/addressss" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="柏景台13楼A室"
                    android:textColor="#ABABAB"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_preferential"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:gravity="center_vertical"
                android:text="附近0个商家发券"
                android:textColor="#ABABAB"
                android:textSize="14sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="44dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"

            >

            <RelativeLayout
                android:id="@+id/rl_restar"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_cash">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/daohangdiz" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_mycard"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/bg_cash">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_centerInParent="true"

                    android:src="@drawable/kabaon" />

            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>


</LinearLayout>