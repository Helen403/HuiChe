<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_height="110dp">
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <ImageView 
                android:id="@+id/img_goods"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/shangj_beij11"
                android:scaleType="centerCrop"
                />
            
            </LinearLayout>
            
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_crad_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="16dp"
                    android:singleLine="true"
                    android:text="10元代金券"
                    android:maxLength="7"
                    android:textColor="#191919"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_crad_money"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="14dp"
                    android:singleLine="true"
                    android:text="南城/鸿福西路/美发"
                    android:textColor="#C4C4C4" />

                <TextView
                    android:id="@+id/tv_markey_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_below="@id/tv_crad_money"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="门店价:10元"
                    android:textColor="#C4C4C4" />

                <TextView
                    android:id="@+id/tv_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tv_crad_money"
                    android:background="@drawable/my_border"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:layout_marginRight="10dp"
                    android:text="添加购物车"
                    android:textColor="#20AFE7"
                    android:textSize="16sp" />

            </RelativeLayout>

        </LinearLayout>
        <!-- 滑动删除布局 -->
    <RelativeLayout
        android:id="@+id/aditem_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/back_red" >

        <TextView
            android:textSize="16sp"
            android:id="@+id/item_riad"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>
